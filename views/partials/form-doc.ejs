<form onsubmit="return createHolder(this)" method="POST" class="col-md-6 row row-cols-lg-auto g-2 align-items-center">
    <div class="input-group">
        <label for="create_start">Context du dossier</label>
        <textarea name="contextHolder" id="contextHolder" cols="30" rows="10"></textarea>
    </div>
    <div class="input-group">
        <label for="create_start">Date d'ouverture du dossier</label>
        <input class="form-control form-control-sm" type="datetime-local" name="create_start" aria-label=".form-control-sm example">
    </div>
    <div class="input-group">
        <label for="create_stop">Date de cloture du dossier</label>
        <input class="form-control form-control-sm" type="datetime-local" id="create_stop" name="create_stop" aria-label=".form-control-sm example">
    </div>
    <input type="submit" name="submitForm" value="Creation du dossier" class="btn btn-primary btn-sm">
</form>
